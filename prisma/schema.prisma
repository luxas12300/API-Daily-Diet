generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Meal{
  id  String @id @default(uuid())
  name String 
  description String
  date DateTime @default(now())
  dieta Boolean

  @@map("meal")
}

model User{
  id String @id @default(uuid())
  name String
  email String @unique
  password String

  @@map("user")
}

